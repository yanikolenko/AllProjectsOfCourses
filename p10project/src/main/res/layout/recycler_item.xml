<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/fifthImg"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/fifthName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fifthImg"
        app:layout_constraintStart_toEndOf="@+id/fifthImg"
        app:layout_constraintTop_toTopOf="@+id/fifthImg"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/fifthMassage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/fifthName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fifthName"
        app:layout_constraintTop_toBottomOf="@+id/fifthName" />

    <View
        android:background="@color/black"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:alpha="0.4"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthImg" />
</androidx.constraintlayout.widget.ConstraintLayout>